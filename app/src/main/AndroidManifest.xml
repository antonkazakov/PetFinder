<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greencode.petfinder">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".PFApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.screens.main.MainContainerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.screens.petSearch.SearchFiltersActivity"
            android:label="@string/title_activity_search_filters"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".ui.screens.petSingle.SinglePetActivity" />
        <activity
            android:name=".ui.screens.shelterSingle.ShelterPageActivity"
            android:label="@string/title_activity_shelter_page"
            android:theme="@style/SheltersTheme" />
        <activity android:name=".ui.screens.petSingle.PetPhotoViewActivity"
            android:theme="@style/FullScreenActivityTheme"/>
    </application>

</manifest>